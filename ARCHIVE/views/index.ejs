            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const imgContainer = document.getElementById('catchyContentCarouselImg');
                    const header = document.getElementById('header');
                    const headerHeight = header.offsetHeight;
                    const imgHeight = imgContainer.offsetHeight;
                    const initialBottom = 40; // Initial bottom position

                    // Calculate the maximum distance the image should move
                    const maxDistance = headerHeight - imgHeight;

                    // Set initial bottom position
                    imgContainer.style.bottom = `${initialBottom}px`;

                    let lastScrollTop = 0;

                    window.addEventListener('scroll', function () {
                        // Calculate the distance scrolled
                        const scrollDistance = window.scrollY;

                        // Calculate the scroll direction
                        const scrollDirection = scrollDistance > lastScrollTop ? 'down' : 'up';

                        // Update last scroll position
                        lastScrollTop = scrollDistance;

                        // Calculate the translateY value based on scroll direction and position
                        let translateY = initialBottom;

                        if (scrollDirection === 'down') {
                            translateY -= Math.min(maxDistance, scrollDistance);
                        } else {
                            translateY -= Math.max(0, scrollDistance);
                        }

                        // Apply the translateY value to the image container
                        if (translateY > -50) {
                            imgContainer.style.bottom = `${translateY}px`;
                        } else {
